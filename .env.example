# =============================================================================
# SynapseFlow AI Configuration Template
# Copy this file to .env and configure your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Core AI Configuration
# -----------------------------------------------------------------------------
# Ollama (Local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3
OLLAMA_DISABLE=0

# OpenAI Configuration
OPENAI_API_KEY=
USE_OPENAI=0
OPENAI_MODEL=gpt-3.5-turbo

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Environment settings
ENVIRONMENT=development
LOG_FORMAT=json
DEBUG=0

# Main server
SERVER_HOST=0.0.0.0
SERVER_PORT=8081

# Admin Interface
ADMIN_HOST=127.0.0.1
ADMIN_PORT=5050
ADMIN_DEBUG=0
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production
ADMIN_SECRET=generate-secure-random-string

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Licensing
LICENSE_ENFORCE=0
LICENSE_ISSUER_SECRET=generate-secure-license-key

# Rate Limiting
RATE_LIMIT_PER_MIN=120
ADMIN_ENFORCE_USERS=0

# -----------------------------------------------------------------------------
# External Service Integrations
# -----------------------------------------------------------------------------
# Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=

# Facebook Messenger
FB_PAGE_TOKEN=
FB_VERIFY_TOKEN=
FB_APP_SECRET=

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Application Features
# -----------------------------------------------------------------------------
# Auto-reply for webhooks
AUTO_REPLY=1

# Data directory
DATA_DIR=synapseflow_data

# Health checks
HEALTH_CHECK_INTERVAL=60

# -----------------------------------------------------------------------------
# Development/Production Specific
# -----------------------------------------------------------------------------
# Set to 1 in production to enforce configuration validation
CONFIG_VALIDATION_STRICT=0

# Performance monitoring
ENABLE_METRICS=1
METRICS_PORT=9090

# Backup configuration
BACKUP_ENABLED=0
BACKUP_INTERVAL_HOURS=24
